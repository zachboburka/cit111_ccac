package inheritance;

import java.util.Scanner;

/**
 * this program will take computer components and human interest components and
 * will print specifics about the component, then put it on a time line.
 *
 * @author zachary.boburka
 */

/*
    Parent Class named component will store member variables for the
    component's name, author, project name, and description, along with 
    a method to determine how long ago it happened.
 */
class Component {

    int year;
    int yearsAgo;
    String projectName;
    String author;
    String description;
    String type;

    public int yearSince(int currentYear) {
        yearsAgo = (currentYear - year);

        return yearsAgo;
    }//end yearSince

}//end Component

class computerComponent extends Component {

    double price;
    double currentPrice;
    double inflationRate;
    int priceYear;
    String manufacturer;
    String modelName;
    String whyChoose;
    String yearEvent;

    public double newPrice(double inflationRate) {

        //computer current price using inflation rate
        currentPrice = (price * inflationRate);

        return currentPrice;
    }
}//end computerComponent

class humanInterest extends Component {

    String referenceSourceURL;
    String impactOnYou;

}//end humanInterest


/*
User will enter in the details of their event.
 */
public class Timeline {

    public static void main(String[] args) {

        /*
        Originally, I could not get my scanner to read more than one word,
        but after looking through a forum, I found that using .nextLine() 
        instead of .next() allows you to do so.
         */
 /*
        you need to reformat the questions so that they are only in the
        if statement or maybe make an array. They all might need the same
        scanner too. Pretty close to being done.
         */
        Component user = new Component();

        //user interaction
        Scanner ScanComponent = new Scanner(System.in);

        System.out.println("Was this project a Computer or Human Interest Component? ");
        user.type = ScanComponent.nextLine();

        System.out.println("Who was the author? ");
        user.author = ScanComponent.nextLine();

        System.out.println("What was the Project's Name? ");
        user.projectName = ScanComponent.nextLine();

        System.out.println("Enter a brief description :  ");
        user.description = ScanComponent.nextLine();

        System.out.println("What Year Did The Project Release? ");
        user.year = ScanComponent.nextInt();

        Scanner ScanComponent2 = new Scanner(System.in);

        //component-specific questions
        System.out.println("Computer Component(1) or Human Interest Component(2)?");
        int componentType = ScanComponent2.nextInt();

        if (componentType == 1) {
            computerComponent userComputer = new computerComponent();

            //if computer component is chosen
            System.out.println("What is the price? ");
            userComputer.price = ScanComponent2.nextDouble();

            System.out.println("What was the inflation rate for "
                    + user.year + "?");
            userComputer.inflationRate = ScanComponent2.nextDouble();

            System.out.println("Who is the manufacturer? ");
            userComputer.manufacturer = ScanComponent2.nextLine();

            System.out.println("What is the model name? ");
            userComputer.modelName = ScanComponent2.nextLine();

            System.out.println("Why did you choose this project? ");
            userComputer.whyChoose = ScanComponent2.nextLine();

            System.out.println("List a noteworthy event that happened in the "
                    + "same year ");
            userComputer.yearEvent = ScanComponent2.nextLine();

            //print results
            System.out.println("****");
            System.out.println("Price : " + userComputer.price);
            System.out.println("Price in 2019 : " + userComputer.newPrice(userComputer.inflationRate));
            System.out.println("Manufacturer : " + userComputer.manufacturer);
            System.out.println("Model Name : " + userComputer.modelName);
            System.out.println("Reason for Choosing : " + userComputer.whyChoose);
            System.out.println(user.year + " Historical Event : " + userComputer.yearEvent);

        } else {
            humanInterest userHuman = new humanInterest();

            //if human interest component is chosen
            System.out.println("What impact did this project have on you?");
            userHuman.impactOnYou = ScanComponent2.nextLine();

            //print results
            System.out.println("****");
            System.out.println("Project's Personal Impact : " + userHuman.impactOnYou);
        }

    }//end main
}//end Timeline
