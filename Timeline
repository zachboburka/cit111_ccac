package inheritance;

import java.util.Scanner;

/**
 * this program will take computer components and human interest components and
 * will print specifics about the component, then put it on a time line.
 *
 * @author zachary.boburka
 */

/*
    Parent Class named component will store member variables for the
    component's name, author, project name, and description, along with 
    a method to determine how long ago it happened.
 */
class Component {

    int year;
    int yearsAgo;
    String projectName;
    String author;
    String description;
    String type;

    public int yearSince(int currentYear) {
        yearsAgo = (currentYear - year);

        return yearsAgo;
    }//end yearSince

}//end Component

class computerComponent extends Component {

    double price;
    double currentPrice;
    int priceYear;
    String manufacturer;
    String modelName;
    String whyChoose;
    String yearEvent;

    public double newPrice(double inflationRate) {

        //computer current price using inflation rate
        currentPrice = (price * inflationRate);

        return currentPrice;
    }
}//end computerComponent

class humanInterest extends Component {

    String referenceSourceURL;
    String creator;

}//end humanInterest


/*
User will enter in the details of their event.
 */
public class Timeline {

    public static void main(String[] args) {

        /*
        Originally, I could not get my scanner to read more than one word,
        but after looking through a forum, I found that using .nextLine() 
        instead of .next() allows you to do so.
         */
        Component user = new Component();

        //user interaction
        Scanner ScanComponent = new Scanner(System.in);

        System.out.println("Was this project a Computer or Human Interest Component? ");
        user.type = ScanComponent.nextLine();

        System.out.println("Who was the author? ");
        user.author = ScanComponent.nextLine();

        System.out.println("What was the Project's Name? ");
        user.projectName = ScanComponent.nextLine();

        System.out.println("Enter a brief description :  ");
        user.description = ScanComponent.nextLine();

        System.out.println("What Year Did The Project Release? ");
        user.year = ScanComponent.nextInt();

        //print results
        System.out.println("**** Event ****");
        System.out.println("Author : " + user.author);
        System.out.println("Project Name : " + user.projectName);
        System.out.println("Description : " + user.description);
        System.out.println("Year : " + user.year);
        System.out.println("Years Ago : " + user.yearSince(2019));
        System.out.println("Type of Component : " + user.type);

        ScanComponent.close();

    }//end main
}//end Timeline
