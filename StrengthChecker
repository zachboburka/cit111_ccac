package cit130;

/**
 *
 * @author zachboburka
 */
public class StrengthChecker {
          
    //password length
        int min = 8;
        int max = 50;
        int criteria;        
                
        

        
        public int SetReqLength(String enteredPassword){
        
            //reqLength
            //sets the required lenght of the password
            int length = enteredPassword.length( );
            if(length >= min && length <= max) {
                criteria = criteria + 1;
            } else {
                criteria = criteria + 0;
            }//end length if
        
            System.out.println(criteria);
            return  criteria;
        }//end SetReqLength
         
        
        
            public int setReqChars(String enteredPassword){
                //arrays
                //set up array
                String[] req = new String[2];
                req[0] = "%";
                req[1] = "@";

                    //reqChar
                    //stores the characters that can be used in the password
                    //checks for @
                    int at = enteredPassword.indexOf("@");
                    if(at >= 0) {
                    criteria = criteria + 1;
                    } else {
                    criteria = criteria + 0;
                    }//end @ if
          
                        //checks for %
                        int percent = enteredPassword.indexOf("%");
                        if(percent >= 0) {
                            criteria = criteria + 1;
                        } else {
                            criteria = criteria + 0;
                        }//end % if
                        
                        //track if the password meets the "@" and "%" character result                        
                        System.out.println(criteria);                    
                        return criteria;
                        
            }//end setReqChars                
                
            
            
                public int criteriaMet(){
                            
                            //track if password criteria is met
                            //determine if password matches all criteria and is legal    
                            if(criteria == 2){
                                    System.out.println("Password is Good");
                                } else {
                                    System.out.println("Password Does Not Meet Criteria");
                                }//end criteria if
                                
                                System.out.println(criteria);
                                
                                return criteria;
                             }//end criteriaMet
                
                
                             
                    
}//end class
