package cit130;

/**
 *
 * @author zachboburka
 */
public class StrengthChecker {
          
    //password length
        int min;
        int max;
        int criteria = 0;
        String[] reqChars= {"@", "!"};
        boolean reqLength;
        boolean reqChar;
        boolean reqCriteria;
        


        
        public int SetReqLength(int min, int max, String enteredPassword){
            //reqLength
            //sets the required lenght of the password
            int length = enteredPassword.length( );
            while(true) {
            if(length >= min && length <= max){
                reqLength = true;
                criteria = criteria + 1;
            } else { 
                reqLength = false;
                criteria = criteria - 2;                
                break;
            }//end if
                            
            return criteria;
            }//loop
            return length;
        }//end SetReqLength
        
        
        
            public int setReqChars(String enteredPassword){
                //arrays
                //set up array
                
                for(int i =0; i < reqChars.length; i++) {
                        if(enteredPassword.contains(reqChars[i])){        
                        reqChar = true;
                        criteria = criteria + 1;
                        } else {
                        reqChar = false;
                        criteria = criteria + 0;  
                        }
                    }//end for
                
                return criteria;
            }//end setReqChars                
                
            
                

                public boolean CheckPassword(String enteredPassword){
                            //track if password criteria is met
                            //determine if password matches all criteria and is legal 
                            while(true) {
                            
                            if(criteria >= 2){
                                reqCriteria = true;
                                System.out.println("Password meets all requirements, good job");
                                break;
                            } else {
                                reqCriteria = false;
                                System.out.println("Password does not meet criteria, please try again.");
                                break;
                            }//end if
                            
                            
                             }//end loop
                            return reqCriteria;
                }//end CheckPassword
                
                
                }//end class
