        button3.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent w) {
                AccountWithdrawl(10);
            }
        });
        
        button4 = new JButton("20");
        button4.setForeground(Color.WHITE);
        button4.setBackground(Color.RED);
