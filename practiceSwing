
import java.awt.BorderLayout;
import java.awt.Color;
import java.awt.Dimension;
import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.Scanner;
import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class swingPractice {

    int accountBalance = 10000;
    int depositAmount;
    int withdrawlAmount;

    swingPractice() {

        //Make Frame, buttons, and label
        JFrame frame = new JFrame();
        JButton button, button1, button2;
        JLabel label;
        button = new JButton("Deposit");
        button1 = new JButton("Withdrawl");
        button2 = new JButton("Exit");
        label = new JLabel("Choose A Service", JLabel.CENTER);

        //Deposit Button
        //button color
        button.setForeground(Color.WHITE);
        button.setBackground(Color.RED);
        //button function
        button.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent d) {
                AccountDeposit(10);
            }
        });

        //Withdrawl Button
        //button color
        button1.setForeground(Color.WHITE);
        button1.setBackground(Color.RED);
        //button function
        button1.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent w) {
                WithdrawlGUI();
            }
        });

        //Exit Button
        //button color
        button2.setForeground(Color.WHITE);
        button2.setBackground(Color.RED);
        //button function
        button2.addActionListener(new ActionListener() {
            public void actionPerformed(ActionEvent exit) {
                System.exit(0);
            }
        });

        //Label
        //Panel and GridLayout
        JPanel panel = new JPanel(new GridLayout(6, 7, 10, 10));
        //add buttons and label
        panel.add(label);
        panel.add(button);
        panel.add(button1);
        panel.add(button2);

        //frame settings
        frame.setTitle("GTA V ATM");
        frame.setSize(300, 400);
        frame.getContentPane().add(panel);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setLocationRelativeTo(null);
        frame.setVisible(true);

    }

    public static void main(String[] args) {
        new swingPractice();

    }

    //deposit code
    public void AccountDeposit(int amountD) {
        System.out.println("Enter Deposit Amount");
        Scanner scanDeposit = new Scanner(System.in);
        int enteredDeposit = scanDeposit.nextInt();

        accountBalance = (accountBalance + enteredDeposit);

        System.out.println("Account Balance : " + accountBalance);
    }//accountDeposit()

    //withdrawl code
    public void AccountWithdrawl(int amountW) {

        accountBalance = (accountBalance - amountW);

        System.out.println("Account Balance : " + accountBalance);
    }//accountWithdrawl()

    public void WithdrawlGUI() {
        //set frame
        JFrame wFrame = new JFrame();
        //set buttons
        JButton button3, button4, button5, button6, button7, button8;
        //set label
        JLabel label1;

        
        //Button Name
        button3 = new JButton("10");
