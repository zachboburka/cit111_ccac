import java.awt.Color;
import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.Scanner;
import javax.swing.JButton;
import javax.swing.JFrame;


public class practiceSwing {
    
    int accountBalance = 10000;
    int depositAmount;
    int withdrawlAmount;
    
    
	practiceSwing(){
			JFrame frame = new JFrame("Flow Layout");
			JButton button,button1, button2;
			button = new JButton("Deposit");
			button1 = new JButton("Withdrawl");
			button2 = new JButton("Exit");

			frame.add(button);
			frame.add(button1);
			frame.add(button2);
                        
                        //Deposit Button
                        button.setForeground(Color.GREEN);
                        
                        button.addActionListener(new ActionListener() {
                        @Override
                        public void actionPerformed(ActionEvent d) {
                            AccountDeposit();
                        }
                        });
                        
                        //Withdrawl Button
                        button1.setForeground(Color.GREEN);
                        
                        button1.addActionListener(new ActionListener() {
                        @Override
                        public void actionPerformed(ActionEvent w) {
                            AccountWithdrawl();
                        }
                        });
                        
                        //Exit Button
                        button2.setForeground(Color.RED);
                        button2.addActionListener(new ActionListener(){
                        public void actionPerformed(ActionEvent exit) {
                            System.exit(0);
                        }
                        });

                        frame.setLayout(new GridLayout(3,1));
			frame.setSize(300,300);  
			frame.setVisible(true);  
		
		}
		public static void main(String[] args) {
			new practiceSwing();
                        
		}
                
        public void AccountDeposit(){
            System.out.println("Enter Deposit Amount");
            Scanner scanDeposit = new Scanner(System.in);
            int enteredDeposit = scanDeposit.nextInt();
            
            accountBalance = (accountBalance + enteredDeposit);
            
            System.out.println("Account Balance : " + accountBalance);
        }//accountDeposit()
        
        public void AccountWithdrawl(){
            System.out.println("Enter Withdrawl Amount");
            Scanner scanWithdrawl = new Scanner(System.in);
            int enteredWithdrawl = scanWithdrawl.nextInt();
            
            accountBalance = (accountBalance + enteredWithdrawl);

            System.out.println("Account Balance : " + accountBalance);
        }//accountWithdrawl()
                
                
	}
