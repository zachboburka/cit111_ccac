package cit130;
import java.util.Scanner;

/**
 *
 * @author zachboburka
 */
public class SecureLand {
    

    
    public static void main(String[] args) {
        //user input
        //user enters a password and program determines whether or not
        //it meets the length and character requirement
        
        
        //create string for entered password
        String enteredPassword;
        
        //ints
        int min1 = 8;
        int max1 = 50;
        int criteria1 = 0;


        //loop
        while(true) {
            //ask user
            System.out.println("Create Password, Must Be Between 8 and 50 characters, and Contain an @ or %.");
            
            //scanner
            Scanner ScanPassword = new Scanner(System.in);
            enteredPassword = ScanPassword.next();
            int length1 = enteredPassword.length( );

            if(length1 >= 8 && length1 <= 50) {
                criteria1 = criteria1 + 1;
            } else {
                criteria1 = criteria1 + 0;
            }//end if length
            
                int at = enteredPassword.indexOf("@");
                        if(at >= 0) {
                        criteria1 = criteria1 + 1;
                        } else {
                        criteria1 = criteria1 + 0;
                        }//end @ if

                //checks for %
                            int percent = enteredPassword.indexOf("%");
                            if(percent >= 0) {
                                criteria1 = criteria1 + 1;
                            } else {
                                criteria1 = criteria1 + 0;
                            }//end % if
                            
                            if(criteria1 >= 2) { 
                                System.out.println("Password meets criteria");
                                break;
                            } else { 
                                System.out.println("Password does not meet criteria, please enter another one.");
                                System.out.println(" ");
                            }//end if
            }//end while loop
        
            
        
        
        
        
        
            
        
        
        
    }//end main
}//end class
