package cit130;
import java.util.Scanner;

/**
 *
 * @author zachboburka
 */
public class SecureLand {
    
    public static void main(String[] args) {
        //user input
        //user enters a password and program determines whether or not
        //it meets the length and character requirement
        
        //create string for entered password
        String enteredPassword;
        
        //ask user
        System.out.println("Create Password, Must Be Between 8 and 50 characters, and Contain an @ or %.");
        
        Scanner ScanPassword = new Scanner(System.in);
            enteredPassword = ScanPassword.next();
        
        //arrays
        //set up array
        String[] req = new String[2];
        req[0] = "%";
        req[1] = "@";

        
        
        //reqChar
        //stores the characters that can be used in the password
        //checks for @
        int at = enteredPassword.indexOf("@");
        int charResultAt;
        if(at >= 0) {
            charResultAt = 1;
        } else {
            charResultAt = 0;
        }
        
        //checks for %
        int percent = enteredPassword.indexOf("%");
        int charResultPercent;
        if(percent >= 0) {
            charResultPercent = 1;
        } else {
            charResultPercent = 0;
        }
        
        //reqLength
        //sets the required lenght of the password
        int length = enteredPassword.length( );
        int lengthResult;
        if(length >= 8 && length <= 50) {
            lengthResult = 1;
        } else {
            lengthResult = 0;
       }

        //track if password criteria is met
        int criteria;
        criteria = lengthResult + charResultAt + charResultPercent;
        
        //determine if password matches all criteria and is legal
        if(criteria == 2){
            System.out.println("Password is Good");
        } else {
            System.out.println("Password Does Not Meet Criteria");
        }
            
        
        
        
    }//end main
}//end class
