package inheritance;

import java.util.Scanner;

/**
 *
 * @author zachary.boburka
 */
public class HumanComponent extends Component{
    String referenceSourceURL;
    String impactOnYou;
    
    HumanComponent() {
        Scanner ScanComponent = new Scanner(System.in);

        HumanComponent userHuman = new HumanComponent();
        System.out.println("Who was the author? ");
        userHuman.author = ScanComponent.nextLine();

        System.out.println("Enter a brief description :  ");
        userHuman.description = ScanComponent.nextLine();

        System.out.println("What impact did this project have on you?");
        userHuman.impactOnYou = ScanComponent.nextLine();

        //print results
        System.out.println("");
        System.out.println("***Human Interest Component***");
        System.out.println("Author : " + userHuman.author);
        System.out.println("Description : " + userHuman.description);
        System.out.println("Project's Personal Impact : " + userHuman.impactOnYou);
        System.out.println("");
    }
}
