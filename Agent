package SetsAndMaps;

import java.util.HashMap;
import java.util.Map;
import java.util.List;
import java.util.LinkedList;
import java.util.Random;

/**
 *
 * @author zachboburka
 */
public class Agent {

    Map<Integer, Agent> mapAgent = new HashMap();
    int idNum;
    String location;
    String name;
    String assignStat;
    String contactInfo;
    double stealthiness;
    boolean secretCoverUpheld;

    //agent factory
    public static Agent genAgent() {
        int id = 100000;
        Random r = new Random();
        Agent agent = new Agent();
        agent.SetID(id++);
        agent.SetStealth(r.nextDouble());
        return agent;
    }// end genAgent

    void SetID(int idSet) {
        idNum = idSet;

    } // end SetID

    public int GetID() {
        mapAgent.get(idNum);
        return idNum;
    } //end GetStealth

    public void SetStealth(double stealthSet) {
        stealthiness = stealthSet;

    } //end SetStealth

    public double GetStealth() {
        mapAgent.get(stealthiness);
        return stealthiness;
    } //end GetStealth

    Map<String, Double> countryMap = new HashMap<String, Double>();
    
    void PrintAgentInfo(Agent ga) {
        System.out.println(idNum);
        System.out.println(location);
        System.out.println(name);
        System.out.println(assignStat);
        System.out.println(contactInfo);

    }
    
    
    
}//end Agent
