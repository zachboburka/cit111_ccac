package SetsAndMaps;

import java.util.HashMap;
import java.util.Map;
import java.util.List;
import java.util.LinkedList;
import java.util.Random;

/**
 *
 * @author zachboburka
 */
public class Agent {

    Map<Integer, Agent> mapAgent = new HashMap();
    int idNum = 10000;
    String location;
    String name;
    String assignStat;
    String contactInfo;
    double countryStealth;
    double stealthiness;
    boolean secretCoverUpheld;
    public static int count = 0;

    //agent factory
    public Agent genAgent() {
        Random r = new Random();
        Agent agent = new Agent();
        //next line needs moved somewhere
        agent.SetStealth(r.nextDouble());
        return agent;
    }// end genAgent

    public void SetID() {
        idNum = count++;
        
    } // end SetID

    public int GetID() {
        mapAgent.get(idNum);
        return idNum;
    } //end GetStealth

    public void SetStealth(double stealthSet) {
        stealthiness = stealthSet;

    } //end SetStealth

    public double GetStealth() {
        mapAgent.get(stealthiness);
        return stealthiness;
    } //end GetStealth
    

            
    public boolean IsCoverBlown() {
    Map<String, Double> countryMap = new HashMap<String, Double>();
    countryMap.put("UK", 0.2);
    countryMap.put("Iran", 0.92);
    countryMap.put("China", 0.85);
    countryMap.put("Japan", 0.3);
    
        if (stealthiness > countryMap.get("UK")) {
            secretCoverUpheld = true;
            System.out.println(countryMap.get("UK"));
        } else {
            secretCoverUpheld = false;
        } //end if statement
            return secretCoverUpheld;
    }//end IsCoverBlown

    void PrintAgentInfo(Agent ga) {
        Random r = new Random();
        SetID();
        System.out.println("");
        System.out.println("Agent ID : " + GetID());
        SetStealth(r.nextDouble());
        System.out.println("Stealth Rating : " + GetStealth());
        IsCoverBlown();
        System.out.println("Still under cover? : " + secretCoverUpheld);
    }
    
    

}//end Agent
